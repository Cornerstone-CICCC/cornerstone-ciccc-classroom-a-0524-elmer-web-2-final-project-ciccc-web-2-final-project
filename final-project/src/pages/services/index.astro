---
import Header from "../../components/header/Header.astro";
const serviceImages = await Astro.glob("../../../public/services/*.png")
import "./serviceStyles/_styles.css"
import Footer from "../../components/footer/index.astro";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Our Services</title>
    </head>
    <body>
        <Header />
        <main>
            <div id="service-title">
                <h1>Our Services</h1>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>

            <div id="services">
                <div class="top-cards">
                    <div class="card-component">
                        <img src=`../../../public/services/Image1.png` />
                        <div class="text">
                            <h5>One Bedroom Apartment</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.</p>
                        </div>
                    </div>
                    <div class="card-component">
                        <img src=`../../../public/services/Image2.png` />
                        <div class="text">
                            <h5>Window Cleaning</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.</p>
                        </div>
                    </div>
                    <div class="card-component">
                        <img src=`../../../public/services/Image3.png` />
                        <div class="text">
                            <h5>Residential Cleaning</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.</p>
                        </div>
                    </div>
                </div>
                <div class="bottom-cards hidden">
                    <div class="card-component">
                        <img src=`../../../public/services/Image4.png` />
                        <div class="text">
                            <h5>Construction Cleaning</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.</p>
                        </div>
                    </div>
                    <div class="card-component">
                        <img src=`../../../public/services/Image5.png` />
                        <div class="text">
                            <h5>Commercial Cleaning</h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros.</p>
                        </div>
                    </div>
                    <div class="card-component">
                        <img src=`../../../public/services/Image6.png` />
