<style>
  /* main visaul */
  .main-visual-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 8px;
    padding-right: 8px;
  }

  .main-visual-text {
    width: 100%;
    padding-top: 18px;
    padding-bottom: 18px;
  }

  .main-visual-text h3 {
    font-size: 40px;
    font-weight: 700;
    line-height: 48px;
    margin-top: 0;
    margin-bottom: 20px;
  }

  .main-visual-text p {
    font-size: 18px;
    line-height: 27px;
    margin-bottom: 24px;
  }

  .main-visual-link a {
    display: inline-block;
    font-size: 16px;
    text-decoration: none;
    padding: 12px 24px;
    gap: 8px;
  }

  .main-visual-link-quote {
    background-color: #000;
    color: #fff;
    border-radius: 5px;
  }

  .main-visual-link-learn {
    color: #000;
    border: 1px solid #000;
    border-radius: 5px;
  }

  .main-visual-img {
    display: block;
    width: 100%;
  }

  .main-visual-img img {
    max-width: 100%;
  }

  /* our team */
  .our-team-wrapper {
    text-align: center;
  }

  .our-team-wrapper h2 {
    font-size: 48px;
    font-weight: 700;
  }

  .our-team-text {
    font-size: 18px;
  }

  .our-team-content {
    margin-top: 32px;
  }

  .our-team-content-img img {
    width: 100%;
  }

  /* .our-team-content-text{
    padding-bottom: ;
  } */
  .our-team-content-text .name {
    font-size: 20px;
    font-weight: 600;
    margin-top: 20px;
  }

  .our-team-content-text .text-content {
    width: 85%;
    margin: 0 auto 20px;
    font-size: 16px;
    line-height: 24px;
  }

  @media screen and (min-width: 640px) {
    /* main visual */
    .main-visual-wrapper {
      flex-direction: row;
    }

    .main-visual-text-inner {
      margin-left: 2.5rem;
      margin-right: 1.5rem;
    }
  }
</style>
